<style>
*{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    font-family: 'Piazzolla', serif;
}
body{
    height: 100vh;
}

.navbar a{
color:white;
}

.fa-dharmachakra{
    animation: rotate 4s linear infinite;
}
@keyframes rotate {
    0%{
        transform: rotate(0deg);
    }
    100%{
        transform: rotate(360deg);
    }
}

.main-header-content{
    display: flex;
    justify-content: center;
    flex-direction: column;
    height: 43rem;
}

.main-header-image{
    display: flex;
    justify-content: center;
    flex-direction: column;
    height: 43rem;
}
.main-header-image img{
    width: 25rem;
    filter: drop-shadow(0 0.5rem 1rem rgba(0,0,0,0.3));
}
.checknow{
    padding: 3px 0rem 5px 0rem !important;
    width: 20%;
    box-shadow: 0px 3px 3px 0px #000000;
    border: none;
}
.checknow:hover{
    box-shadow: 0px 3px 3px 0px rgb(132, 215, 226);
}

.telling span{
    color:#0097e6;
}
.fa-dharmachakra{
    color: #0097e6;
}
.search_city{
    width: 60%;
    margin: 10rem auto 5rem;
    height: 3rem;
    position: relative;
}

#text{
    width: 100%;
    position: absolute;
    height: 100%;
    background-color: #1e202b;
    border: none;
    outline: none;
    border-radius: 3rem;
    padding: 0rem 0rem 0rem 2rem;
    color: whitesmoke;
}
#text::placeholder{
    color:#bfc1c8;
}
#Search{
    position: absolute;
    right: 5px;
    top: 5px;
    color: whitesmoke;
    border: none;
    outline: none;
    height: 80%;
    width:6rem;
    background-color: #0097e6;  
    border-radius: 3rem;
}
.weather_box{
    width: 30%;
    margin: 0 auto;
    background-color: #1e202b;
    color: whitesmoke;
    height: 60vh;
    border-radius: 2rem;
    padding: 2rem 1rem 0;
}
.time{
    display: flex;
    justify-content: space-between;
    font-size: 1.5rem;
    height: 4rem;
    /* border: 1px solid red; */
}
.output{
    /* border: 3px solid yellow; */
    font-size: 1.5rem;
    height: 12rem;
}
#temperature{
    font-size: 6.5rem;
